button, .btn
  color #333
  border 4px solid #333
  cursor pointer
  padding buttonPadding
  border-radius 1px
  display inline-block
  font-family 'brandon-grotesque', sans-serif
  font-weight 700
  text-transform uppercase
  background-color transparent

.btn,
button
  color #333
  display inline-block
  text-decoration none
  transition .5s ease-in-out
  border-radius 1px
  &:hover
    opacity 1 !important
    color white
    background-color darken(callToColor, 20%)
    border 4px solid darken(callToColor, 20%)

.btn-2
  border 4px solid white
  color white
  &:hover
    opacity 1
    color callToColor
    background-color white
    border 4px solid white
    box-shadow 0px 10px 0px rgba(0,0,0,.6)
  &:active
    box-shadow 0px 0 0px rgba(0,0,0,.6)

.btn-3
  border 4px solid projectColor
  color projectColor
  &:hover
    opacity 1
    color white
    background-color projectColor
    border 4px solid projectColor
    box-shadow 0px 10px 0px rgba(0,0,0,.6)
  &:active
    box-shadow 0px 0 0px rgba(0,0,0,.6)


.kaartBtn
  z-index 9
  position absolute
  bottom 40px
  left 50%
  transform translateX(-50%)
  border 4px solid white !important
  color projectColor !important
  background-color white
  &:hover
    opacity 1 !important
    background-color #f2f2f2
    border 4px solid white
    box-shadow 0px 10px 0px rgba(0,0,0,.6)
  &:active
    box-shadow 0px 0 0px rgba(0,0,0,.6)
