button, .btn
  color #333
  border 4px solid #333
  cursor pointer
  padding buttonPadding
  border-radius 1px
  display inline-block
  font-family 'brandon_textbold', sans-serif
  text-transform uppercase
  background-color transparent

.btn,
button
  color #333
  display inline-block
  text-decoration none
  transition .5s ease-in-out
  &:hover
    opacity 1
    color white
    background-color darken(callToColor, 20%)
    border 4px solid darken(callToColor, 20%)

.btn-2
  border 4px solid white
  color white
  &:hover
    opacity 1
    color darken(callToColor, 20%)
    background-color white
    border 4px solid white
    box-shadow 0px 10px 0px rgba(0,0,0,.6)
  &:active
    box-shadow 0px 0 0px rgba(0,0,0,.6)

.button-bar
  button
    border-left 1px solid canvas
  button:first-child
    border-radius 4px 0 0 4px
    border-left none
  button:last-child
    border-radius 0 4px 4px 0

button:hover, .btn:hover
  opacity 0.8
