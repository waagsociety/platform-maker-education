.text
	width 100%
	padding 80px 0
	font-size 1.1em
	ul
		list-style-type square
		padding-left 3em
		margin 0 0 3.14285714285714em
		li
			margin 0 0 0.785714em

	p,
	h1,
	h2,
	h3,
	h4,
	h5,
	h6,
	ul
		max-width 800px
		margin-left auto
		margin-right auto
		text-transform none
	p
		color #333
		strong
			font-family 'brandon_textbold', sans-serif

	p:nth-of-type(1)
		font-family: inherit
		color #7F6C6C
		font-size 1.6em
	figure
		margin 80px auto
		width 80%
		figcaption
			margin 2em
			color projectColor
			border 4px solid projectColor
			display inline-block
			padding 2em
	img
		width 100%
	figure.full
		width 100%
	figure.small
		width 40%
	figure.medium
		width 60%
		max-width 800px


.machine-menu
	position fixed
	width 100%
	height 100vh
	right 0
	top 0
	background-color #fc7d7d
	z-index 3
	transition transform .2s ease-in-out
	transform-origin top right
	.machine-grid
		display flex
		flex-wrap wrap
		align-content flex-start
		li
			display inline-block

.machine-menu.closed
	transform scale(0)
.machine-menu.open
	transform scale(1)
.machine-grid
	height 100%
	.machineThumb
		text-align center
		padding 20px
		display inline-block
		.machineLink
			position absolute
			left 0
			top 0
			right 0
			bottom 0
		figure
			margin 0 0 30px 0
		img
			max-width 60%

.sitemap
	width 100%
	background-color #F0F0F0;
	padding 50px

footer
	padding 30px 50px
	float left
	width 100%
	border-top 1px solid white
	z-index 3
	position relative
	p
		margin 0
		opacity .8
		font-size 1em
	svg
		stroke none
	svg
		max-width 150px
		float left
		opacity .6
	.st1
		fill white
svg
	rect
		fill:white
		stroke #ffffff
		stroke-width 0
		stroke-miterlimit 10

#down_btn
	cursor pointer
	width 40px
	position absolute
	left 50%
	margin-left -20px
	bottom 40px
	transition .2s ease-in-out
	&:hover
		transform scale(1.4)
	svg
		stroke none
		path
			fill #fff

.projects
	width 100%
	min-height 100vh
	display flex
	flex-wrap wrap
	align-content flex-end
	.st0
		fill #fff
	nav
		width 40%
		position absolute
		height 10vh
		bottom 0
		left 0
		background callToColor
		div
			color white
			font-size 3em
			width 50%
			height 100%
			cursor pointer
			transition opacity .2s ease-in-out
			&:hover
				background-color darken(callToColor, 20%)
			&:first-child
				border-right 1px solid white
			&:last-child
				border-left 1px solid white
			span
				position absolute
				left 50%
				top 50%
				transform translate(-50%, -50%)
	.projectItem
		position absolute
		width 100%
		height 100%
		background-size cover
		background-position center center
		background-repeat no-repeat
		list-style none
		font-size .875em
		flex-grow 1
		h1
			font-size 1.7em
		.btn-2
			margin-right 10px
		div
			width 35%
			height 100%
			position absolute
			left 0
			bottom 0
			color white
			background rgba(#7358ff, .85)
			padding 5% 50px
			.btn
				margin-bottom 20px

.grid-view
	.projectItem
		position relative
		float left
		width 33.33%
		height 50vh
		opacity 1
		visibility visible
		div
			width 100%
			height 100%
			opacity 0
			padding 40px
			transition opacity .2s ease-in-out
			font-size .875em
			.btn
				margin-bottom 20px
			&:hover
				opacity 1
