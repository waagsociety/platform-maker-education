.home_btn
	width 40px
	height 40px
	position fixed
	left 80px
	top 38px
	z-index 2
	display block
	&:hover
		opacity 1
	svg
		width 15px
		height 15px
		margin 12px
		transition transform .2s ease-in-out
		rect
			fill #fff
	
.home_btn:hover
	svg
		transform scale(1.2)

.main
	margin-bottom 50vh
	float left
	section
		padding 40px
		background #4429D1
		border-bottom 2px solid white
		border-right 2px solid white
		a
			color white
		
.text
	width 100%
	padding 80px 0
	font-size 1.1em
	ul
		list-style-type square
		padding-left 3em
		margin 0 0 3.14285714285714em
		li
			margin 0 0 0.785714em
			
	p,
	h1,
	h2,
	h3,
	h4,
	h5,
	h6,
	ul
		max-width 800px
		margin-left auto
		margin-right auto
		text-transform none
	p
		font-family 'Merriweather', serif
		color #333
		strong
			font-family 'brandon_textbold', sans-serif
			
	p:nth-of-type(1)
		font-family: inherit
		color #7F6C6C
		font-size 1.6em
	figure
		margin 80px auto
		width 80%
		figcaption
			margin 2em
			color projectColor
			border 4px solid projectColor
			display inline-block
			padding 2em
	img
		width 100%
	figure.full
		width 100%
		

.machine-menu
	position fixed
	width 100%
	height 100vh
	right 0
	top 0
	background-color #fc7d7d
	z-index 3
	transition transform .2s ease-in-out
	transform-origin top right
	.machine-grid
		display flex
		flex-wrap wrap
		align-content flex-start
		li
			display inline-block
			
.machine-menu.closed
	transform scale(0)
.machine-menu.open
	transform scale(1)
.machine-grid
	height 100%
	.machineThumb
		text-align center
		padding 20px
		display inline-block
		.machineLink
			position absolute
			left 0
			top 0
			right 0
			bottom 0
		figure
			margin 0 0 30px 0
		img
			max-width 60%
			
.sitemap
	width 100%
	background-color #F0F0F0;
	padding 50px
	height 50vh
	position fixed
	bottom 0
	left 0
	z-index -1