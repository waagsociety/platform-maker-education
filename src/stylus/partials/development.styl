.home_btn
	width 40px
	height 40px
	position fixed
	left 80px
	top 39px
	z-index 3
	display block
	&:hover
		opacity 1
	svg
		width 15px
		height 15px
		margin 12px
		transition transform .2s ease-in-out
		rect
			fill #fff
.home_btn:hover
	svg
		transform scale(1.2)

.home_btn.black
	rect
		fill black

.main
