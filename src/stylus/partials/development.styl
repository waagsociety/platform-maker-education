footer
	padding 30px 50px
	float left
	width 100%
	border-top 1px solid white
	z-index 3
	position relative
	p
		margin 0
		opacity .8
		font-size 1em
	svg
		stroke none
	svg
		max-width 150px
		float left
		opacity .6
	.st1
		fill white

//form
.contact
	width 100%
	float left
	background #4f2d8c
	padding 50px
	color white
	h1
		margin-bottom 2em
	.inner
		max-width 700px
		margin 40px auto
	form
		font-size 1.45em
	.input_block
		width 100%
		margin-bottom 50px
		label
			position absolute
			left 0
			top 5px
	input,
	textarea
		background transparent
		border-bottom 4px solid white
		color white
		width 100%
		padding 10px 20px
		max-width 100%
	textarea
		border 4px solid white

.leaflet-popup-content
	font-size 1.3em
	line-height 2em

input
	-webkit-appearance none
	-moz-appearance none
	appearance none
	border-radius 0
