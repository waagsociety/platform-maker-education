.home_btn
	width 40px
	height 40px
	position fixed
	left 80px
	top 39px
	z-index 3
	display block
	&:hover
		opacity 1
	svg
		width 15px
		height 15px
		margin 12px
		transition transform .2s ease-in-out
		rect
			fill #fff
.home_btn:hover
	svg
		transform scale(1.2)

.home_btn.black
	rect
		fill black

.main
	.item
		color projectColor
		background #fff
		background-repeat no-repeat
		background-size 60%
		background-position center bottom
		transition .2s ease-in-out
		z-index 2
		&:hover
			background-size 70%
			.icon
				transform scale(1.2)
				opacity 1
		a
			color red
		p
			opacity .9
			font-size .875em
			transition .2s ease-in-out
			z-index 2
		h1
			font-size 1.5em
			margin-bottom .1em
			transition .2s ease-in-out
			z-index 2
		.icon
			width 40%
			height 40%
			left 30%
			bottom 0
			position absolute
			z-index 2
			background-size contain
			background-position center bottom
			background-repeat no-repeat
			transition transform .25s ease-in-out, opacity .25s ease-in-out
			transform-origin bottom center
			opacity .8
		section
			height 100%
			width 100%
			overflow hidden
			div
				padding 20%
				height 100%
				width 100%
				background-size cover
				display flex
				align-items center
				background-position center
				background-repeat no-repeat
				background-size 100% auto
				transition .2s ease-in-out
				&:hover
					transform scale(1.05)
		section
			div.cover
				background-size cover


.text
	width 100%
	padding 80px 0
	font-size 1em
	ul
		list-style-type square
		padding-left 3em
		margin 0 0 3.14285714285714em
		li
			margin 0 0 0.785714em
	ol,
	p,
	h1,
	h2,
	h3,
	h4,
	h5,
	h6,
	ul
		font-size 1.4em
		max-width 800px
		margin-left auto
		margin-right auto
		text-transform none
	p
		color #333
		strong
			font-family 'brandon-grotesque', sans-serif
			font-weight 700

	p:nth-of-type(1)
		font-family: inherit
		color #7F6C6C
		font-size 1.6em
	figure
		margin 80px auto
		width 80%
		figcaption
			margin 2em
			color projectColor
			border 4px solid projectColor
			display inline-block
			padding 2em
	img
		width 100%
	figure.full
		width 100%
	figure.small
		width 40%
	figure.medium
		width 60%
		max-width 800px

footer
	padding 30px 50px
	float left
	width 100%
	border-top 1px solid white
	z-index 3
	position relative
	p
		margin 0
		opacity .8
		font-size 1em
	svg
		stroke none
	svg
		max-width 150px
		float left
		opacity .6
	.st1
		fill white

#down_btn
	cursor pointer
	width 40px
	position absolute
	left 50%
	margin-left -20px
	bottom 40px
	transition .2s ease-in-out
	&:hover
		transform scale(1.4)
	svg
		stroke none
		path
			fill #fff

.contact
	width 100%
	float left
	background #8bacf2
	padding 50px
	color white
	h1
		margin-bottom 2em
	.inner
		max-width 700px
		margin auto
	form
		font-size 1.45em
	.input_block
		width 100%
		margin-bottom 50px
		label
			position absolute
			left 0
			top 5px
	input,
	textarea
		background transparent
		border-bottom 4px solid white
		color white
		width 100%
		padding 10px 20px
		max-width 100%
	textarea
		border 4px solid white

.borderLeft
	border-left 2px solid #ccc
.borderTop
	border-top 2px solid #ccc
.borderRight
	border-right 2px solid #ccc
.borderBottom
	border-bottom 2px solid #ccc

.leaflet-popup-content
	font-size 1.3em
	line-height 2em

.news_section
	width 100%
	margin auto
	margin-bottom 100px
	display flex
	align-content flex-end
	padding 50px
	flex-wrap wrap
	.nieuws-item
		width 30%
		flex-grow 1
		margin 2% 1%
		color #333
		padding 40px 0
		margin-bottom 20px
		display block
		border-top 1px solid #f2f2f2
		h1
			margin-bottom .1em

.pagination
	width 100%
	margin 0 1% 0 1%
	padding-top 20px
	border-top 1px solid #f2f2f2
	float left
