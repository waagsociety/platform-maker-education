html,body
	-webkit-overflow-scrolling touch !important
	width 100%
	overflow-x hidden


.main.home
	section
		color black
		position relative
		padding homePadding
		overflow hidden
		div.box
			height 100%
			width 100%
			display flex
			flex-direction column
			border 5px solid #F8A531
			padding 0px
			overflow hidden
			div.box-content
				flex-grow 1
				height 10%
				width 100%
				display flex
				align-items center
				background-position center
				background-repeat no-repeat
				background-size 100% auto
				transition .2s ease-in-out
				background-size contain
			div.fit
				transform scale(0.9)
				&:hover
					transform scale(0.95)
			div.cover
				background-size cover
				&:hover
					transform scale(1.05)
			div.section-bar
				display flex
				div.text-container
					width 80%
					padding 1em
					p
						font-size 1.25em
						font-weight 500
						em
							color projectColor
				div.text-container.full-width
					width 100%
				div.text-container.empty
					width 0%
				div.logo-container
					flex-grow 1
					position relative
					div
						position absolute
						width 100%
						height 100%
						bottom 0px
						right 15px
						background-size contain
						background-position center
						background-repeat no-repeat
					div.funky
						height 200%
				div.logo-container.full-width
					width 100%
		div.box.tagline
			font-size 2em
			border none
			display flex
			align-items center
			justify-content:center
			p
				text-align center
				cursor pointer
				transition .2s ease-in-out
				&:hover
					transform scale(1.05)
			em
				color projectColor
	div.middle-bar
		display flex
		flex-direction row-reverse
	section.sjaak
		padding-bottom 0px
	section.map
		padding-top 0px

//agenda overview page
.main.agenda
	display flex
	flex-direction column
	align-items center
	section
		max-width 900px
		padding 0px homePadding
		.box
			.info-left
				width 20%
				min-width 20%
			.info-right
				margin-left 15px
				border 5px solid projectColor
				.short-info
					padding 10px

//date location in agenda item
.location
	border 5px solid #4F2D8C
	background-color #4F2D8C
	color white
.date
	border 5px solid projectColor

//news overview page
.main.news
	display flex
	flex-direction column
	align-items center
	section
		max-width 800px
		padding homePadding
		.box
			border 5px solid projectColor
			padding 0px
			.short-info
				padding 10px

//
.main.news, .main.agenda
	.image
		width 34%
		background-position center
		background-repeat no-repeat
		background-size contain
	.image.cover
		background-size cover

//hero
.hero
	height 400px
	width 100%
	background-position center
	background-repeat no-repeat
	background-size: contain
.hero.cover
	background-size: cover

//agenda item page
.main.agenda-item, .main.news-item
	display flex
	flex-direction column
	align-items center
	section
		width 100%
		padding homePadding
		.hero
			border 5px solid projectColor
	section.content
		max-width 800px
		.info
			justify-content space-between
		p
			margin 1em 0
		p:nth-of-type(1)
			font-size 1.5em
			color projectColor
			font-weight 500
		img
			width 100%


