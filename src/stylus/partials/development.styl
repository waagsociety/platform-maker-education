.home_btn
	width 40px
	height 40px
	position fixed
	left 80px
	top 39px
	z-index 2
	display block
	&:hover
		opacity 1
	svg
		width 15px
		height 15px
		margin 12px
		transition transform .2s ease-in-out
		rect
			fill #fff
.home_btn:hover
	svg
		transform scale(1.2)

.main
	.item
		color white
		padding 40px
		background #4429D1
		border-bottom 2px solid white
		border-left 2px solid white
		text-align center
		background-repeat no-repeat
		background-size 60%
		background-position center bottom
		transition .2s ease-in-out
		&:hover
			background-size 70%
		&:first-child
			border-left none
		a
			color white
		p
			opacity .7
			transition .2s ease-in-out
		h1
			font-size 1.8em
			margin-bottom .1em
			font-family 'brandon_textbold'
			transition .2s ease-in-out
		
.text
	width 100%
	padding 80px 0
	font-size 1.1em
	ul
		list-style-type square
		padding-left 3em
		margin 0 0 3.14285714285714em
		li
			margin 0 0 0.785714em
			
	p,
	h1,
	h2,
	h3,
	h4,
	h5,
	h6,
	ul
		max-width 700px
		margin-left auto
		margin-right auto
		text-transform none
	p
		color #333
		strong
			font-family 'brandon_textbold', sans-serif
			
	p:nth-of-type(1)
		font-family: inherit
		color #7F6C6C
		font-size 1.6em
	figure
		margin 80px auto
		width 80%
		figcaption
			margin 2em
			color projectColor
			border 4px solid projectColor
			display inline-block
			padding 2em
	img
		width 100%
	figure.full
		width 100%
		

.machine-menu
	position fixed
	width 100%
	height 100vh
	right 0
	top 0
	background-color #fc7d7d
	z-index 3
	transition transform .2s ease-in-out
	transform-origin top right
	.machine-grid
		display flex
		flex-wrap wrap
		align-content flex-start
		li
			display inline-block
			
.machine-menu.closed
	transform scale(0)
.machine-menu.open
	transform scale(1)
.machine-grid
	height 100%
	.machineThumb
		text-align center
		padding 20px
		display inline-block
		.machineLink
			position absolute
			left 0
			top 0
			right 0
			bottom 0
		figure
			margin 0 0 30px 0
		img
			max-width 60%
			
.sitemap
	width 100%
	background-color #F0F0F0;
	padding 50px
	
footer
	padding 30px 50px
	float left
	width 100%
	border-top 1px solid white
	z-index 3
	position relative
	p
		margin 0
		opacity .5
		font-size 1em
	svg
		stroke none
	p
		position absolute
		right 50px
		top 50%;
		transform translateY(-50%);
	svg
		max-width 150px
		float left
		opacity .6
	.st1
		fill white
svg
	rect
		fill:white
		stroke #ffffff
		stroke-width 0
		stroke-miterlimit 10
		
#down_btn
	cursor pointer
	width 40px
	position absolute
	left 50%
	margin-left -20px
	bottom 40px
	transition .2s ease-in-out
	&:hover
		transform scale(1.4)
	svg
		stroke none
		path
			fill #fff
			
.projects
	width 100%
	height 100vh
	nav
		width 40%
		position absolute
		height 10vh
		bottom 0
		left 0
		background callToColor
		div
			color white
			font-size 3em
			width 50%
			height 100%
			cursor pointer
			transition .2s ease-in-out
			&:hover
				background-color darken(callToColor, 20%)
			&:first-child
				border-right 1px solid white
			&:last-child
				border-left 1px solid white
			span
				position absolute
				left 50%
				top 50%
				transform translate(-50%, -50%)
	.projectItem
		position absolute
		top 0
		left 0
		bottom 0
		right 0
		background-size cover
		background-repeat no-repeat
		font-size .875em
		div
			width 40%
			height 100%
			position absolute
			left 0
			top 0
			background rgba(255,255,255, .9)
			padding 10% 50px
			.btn
				margin-bottom 20px
				
.contact
	width 100%
	float left
	background #8bacf2
	padding 50px
	color white
	.inner
		max-width 600px
		margin auto
	form
		font-size 1.45em
	.input_block 
		width 100%
		margin-bottom 50px
		label
			position absolute
			left 0
			top 5px
	input
		background transparent
		border-bottom 4px solid white
		color white
		width 100%