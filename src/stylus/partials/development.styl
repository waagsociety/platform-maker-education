.home_btn
	width 40px
	height 40px
	position fixed
	left 80px
	top 39px
	z-index 2
	display block
	&:hover
		opacity 1
	svg
		width 15px
		height 15px
		margin 12px
		transition transform .2s ease-in-out
		rect
			fill #fff
.home_btn:hover
	svg
		transform scale(1.2)

.main
	.item
		color white
		padding 40px
		background #7358FF
		text-align center
		background-repeat no-repeat
		background-size 60%
		background-position center bottom
		transition .2s ease-in-out
		&:hover
			background-size 70%
		&:first-child
			border-left none
		&:nth-of-type(3)
			border-bottom none
		&:nth-of-type(4)
			border-bottom none
		a
			color white
		p
			opacity .7
			transition .2s ease-in-out
		h1
			font-size 1.8em
			margin-bottom .1em
			font-family 'brandon_textbold'
			transition .2s ease-in-out

.text
	width 100%
	padding 80px 0
	font-size 1.1em
	ul
		list-style-type square
		padding-left 3em
		margin 0 0 3.14285714285714em
		li
			margin 0 0 0.785714em

	p,
	h1,
	h2,
	h3,
	h4,
	h5,
	h6,
	ul
		max-width 700px
		margin-left auto
		margin-right auto
		text-transform none
	p
		color #333
		strong
			font-family 'brandon_textbold', sans-serif

	p:nth-of-type(1)
		font-family: inherit
		color #7F6C6C
		font-size 1.6em
	figure
		margin 80px auto
		width 80%
		figcaption
			margin 2em
			color projectColor
			border 4px solid projectColor
			display inline-block
			padding 2em
	img
		width 100%
	figure.full
		width 100%


.machine-menu
	position fixed
	width 100%
	height 100vh
	right 0
	top 0
	background-color #fc7d7d
	z-index 3
	transition transform .2s ease-in-out
	transform-origin top right
	.machine-grid
		display flex
		flex-wrap wrap
		align-content flex-start
		li
			display inline-block

.machine-menu.closed
	transform scale(0)
.machine-menu.open
	transform scale(1)
.machine-grid
	height 100%
	.machineThumb
		text-align center
		padding 20px
		display inline-block
		.machineLink
			position absolute
			left 0
			top 0
			right 0
			bottom 0
		figure
			margin 0 0 30px 0
		img
			max-width 60%

.sitemap
	width 100%
	background-color #F0F0F0;
	padding 50px

footer
	padding 30px 50px
	float left
	width 100%
	border-top 1px solid white
	z-index 3
	position relative
	p
		margin 0
		opacity .5
		font-size 1em
	svg
		stroke none
	p
		position absolute
		right 50px
		top 50%;
		transform translateY(-50%);
	svg
		max-width 150px
		float left
		opacity .6
	.st1
		fill white
svg
	rect
		fill:white
		stroke #ffffff
		stroke-width 0
		stroke-miterlimit 10

#down_btn
	cursor pointer
	width 40px
	position absolute
	left 50%
	margin-left -20px
	bottom 40px
	transition .2s ease-in-out
	&:hover
		transform scale(1.4)
	svg
		stroke none
		path
			fill #fff

.projects
	width 100%
	height 100vh
	.st0
		fill #fff
	nav
		width 40%
		position absolute
		height 10vh
		bottom 0
		left 0
		background callToColor
		div
			color white
			font-size 3em
			width 50%
			height 100%
			cursor pointer
			transition opacity .2s ease-in-out
			&:hover
				background-color darken(callToColor, 20%)
			&:first-child
				border-right 1px solid white
			&:last-child
				border-left 1px solid white
			span
				position absolute
				left 50%
				top 50%
				transform translate(-50%, -50%)
	.projectItem
		position absolute
		width 100%
		height 100%
		top 0
		left 0
		bottom 0
		right 0
		background-size cover
		background-position center center
		background-repeat no-repeat
		list-style none
		font-size .875em
		.btn-2
			margin-right 10px
		div
			width 35%
			height 100%
			position absolute
			left 0
			bottom 0
			color white
			background rgba(#7358ff, .85)
			padding 5% 50px
			.btn
				margin-bottom 20px

.grid-view
	.projectItem
		position relative
		float left
		width 33.33%
		height 50%
		opacity 1
		visibility visible
		div
			width 100%
			height 100%
			opacity 0
			padding 40px
			transition opacity .2s ease-in-out
			font-size .875em
			.btn
				margin-bottom 20px
			&:hover
				opacity 1
#girdbutton
	width 20px
	height 20px
	cursor pointer
	position absolute;
	right 20px
	top 20px
	z-index 3
.contact
	width 100%
	float left
	background #8bacf2
	padding 50px
	color white
	.inner
		max-width 700px
		margin auto
	form
		font-size 1.45em
	.input_block
		width 100%
		margin-bottom 50px
		label
			position absolute
			left 0
			top 5px
	input,
	textarea
		background transparent
		border-bottom 4px solid white
		color white
		width 100%
		padding 10px 20px
		max-width 100%
	textarea
		border 4px solid white

.card-page
	width 50%
	height 100vh
	float left
	#makermap
		width 100%
		height 100%

.meer-lessen
	z-index 99
.sectionHeader
	padding 100px 0 80px
	text-align center
	float left
	width 100%
	header
		display inline-block
		border-top 1px solid #ccc
		border-bottom 1px solid #ccc
		padding 10px 0
		h1
			margin-bottom .2em
		p
			margin-bottom 0

.full-width-label
	width 100%
	float left
.contact
	.input_anders
		width 50%
		margin-bottom 0
	.radio-block
		width 50%
		height 70px
		label
			padding-left 20px
			position relative
			top 0
		input[type="radio"]
			width auto
			top 15px
	::-webkit-input-placeholder
		color white

	:-moz-placeholder
		color white

	::-moz-placeholder
		color: white

	:-ms-input-placeholder
		color white

	::-ms-input-placeholder
		color white

	:placeholder-shown
		color white


.borderLeft
	border-left 2px solid white
.borderTop
	border-top 2px solid white
.borderRight
	border-right 2px solid white
.borderBottom
	border-bottom 2px solid white

.kaartBtn
	z-index 9
	position absolute
	bottom 40px
	left 50%
	transform translateX(-50%)
	border 4px solid white !important
	color projectColor !important
	background-color white
	&:hover
		opacity 1 !important
		background-color #f2f2f2
		border 4px solid white
		box-shadow 0px 10px 0px rgba(0,0,0,.6)
	&:active
		box-shadow 0px 0 0px rgba(0,0,0,.6)

.leaflet-popup-content
	font-size 1.3em
	line-height 2em


.inspiration_slider
	height 100vh
	li
		position absolute
		height 100%
		width 100%
		background-size cover
		background-attachment fixed
		background-position center center
		list-style none
		&:before
			content ""
			position absolute
			background rgba(0,0,0, .3)
			top 0
			left 0
			bottom 0
			right 0
		.slider_caption
			background rgba(projectColor, 1)
			padding 50px
			max-width 500px
			border-top 4px solid white
			border-right 4px solid white
			color white
			position absolute
			left 0
			bottom 0
			transition .2s ease-out
			h1
				margin-bottom .2em
