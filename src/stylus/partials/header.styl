.header
	height 100vh
	width 100%
	background url(../images/header_bg.jpg);
	background-size cover
	background-position center center
	background-attachment fixed
	overflow hidden
	.headerSign
		color white
		position absolute
		left 50%
		top 50%
		transform translate(-50%, -50%)
		text-align center
		z-index 2
		h1
			margin-bottom .2em
			font-size 4em
			font-family 'polya', sans-serif
			color rgb(255, 123, 123)
		h2
			text-transform none
			font-size 1.3em
.half-width
	width 50%
.header:before
	content ""
	top 0
	left 0
	right 0
	bottom 0
	z-index 2
	position absolute
	background rgba(11,10,56,.75)

#bristelbot
	width 14vw
	position absolute
	top 5vw
	right 100px
	animation move 10s ease-in-out, shake .1s ease-in-out 100
	animation-fill-mode forwards
	z-index 4
	svg
		fill:none
		stroke #0000FF
		stroke-width 4
		stroke-miterlimit 10
		width 100%
		path,
		ellipse,
		line
			stroke white

#plane
	width 18vw
	z-index 9
	height 9vw
	background url(../images/plane.svg)
	background-size contain
	background-repeat no-repeat
	position absolute
	bottom 100px
	left 100px
	z-index 4
	svg
		fill:none
		stroke #0000FF
		stroke-width 4
		stroke-miterlimit 10
		polyline
			stroke white

@keyframes pulse
	0%
		background-color rgba(#8bacf2,.9)
	50%
		background-color rgba(#fc7d7d,.9)
	100%
		background-color rgba(#50e3c2,.9)

@keyframes move
	0%
		right 0
	100%
		right 70%
