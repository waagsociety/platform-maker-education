header
	width 100%
	padding homePadding

.header
	height 99.99vh
	width 100%
	background url(../images/header_bg.jpg);
	background-size cover
	background-position center center
	background-attachment fixed
	overflow hidden
	.headerSign
		color white
		position absolute
		left 50%
		top 50%
		transform translate(-50%, -50%)
		text-align center
		z-index 2
		h1
			margin-bottom .2em
			font-size 6em
			font-family 'polya', sans-serif
			-webkit-font-smoothing antialiased
			-webkit-text-stroke-width: .008em;
			-webkit-text-stroke-color: rgb(255, 123, 123);
			color black
			font-weight 400
		h2
			text-transform none
			font-size 1.3em

.header:before
	content ""
	top 0
	left 0
	right 0
	bottom 0
	z-index 2
	position absolute
	background rgba(11,10,56,.75)
